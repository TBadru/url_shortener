<h2>Your shortened URL</h2>
<p>
  <strong>Short link:</strong>
   <%= link_to short_url(@url.slug), short_url(@url.slug), target: "_blank" %>
</p>
<p><strong>Original link:</strong> <%= @url.original_url %></p>
<p><strong>Clicks:</strong> <%= @url.clicks.count %></p>

<hr>

<h3>Recent Clicks</h3>
<% if @url.clicks.any? %>
  <ul>
    <% @url.clicks.order(created_at: :desc).limit(10).each do |click| %>
      <li>
        IP: <%= click.ip_address %> |
        Referrer: <%= click.referrer || "Direct" %> |
        Time: <%= time_ago_in_words(click.created_at) %> ago
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No clicks yet.</p>
<% end %>

<%= link_to "Shorten another", new_url_path, class: "btn btn-primary" %>
