<div class="max-w-3xl mx-auto my-10 bg-white dark:bg-gray-900 shadow-xl rounded-2xl p-8">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6 text-center">
    ðŸ”— Your Shortened URL
  </h1>

  <div class="space-y-4">
    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4">
      <p class="text-sm text-gray-500 dark:text-gray-400">Short link:</p>
      <a href="<%= short_url(@url.slug) %>" target="_blank"
         class="text-blue-600 dark:text-blue-400 font-semibold hover:underline break-all">
        <%= short_url(@url.slug) %>
      </a>
    </div>

    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4">
      <p class="text-sm text-gray-500 dark:text-gray-400">Original URL:</p>
      <p class="text-gray-800 dark:text-gray-200 break-all"><%= @url.original_url %></p>
    </div>

    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 flex items-center justify-between">
      <p class="text-sm text-gray-500 dark:text-gray-400">Total Clicks:</p>
      <p class="text-xl font-bold text-gray-900 dark:text-gray-100"><%= @url.clicks.count %></p>
    </div>
  </div>

  <hr class="my-8 border-gray-300 dark:border-gray-700" />

  <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
    Recent Clicks
  </h2>

  <% if @url.clicks.any? %>
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @url.clicks.order(created_at: :desc).limit(10).each do |click| %>
        <li class="py-3 flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <div class="text-sm text-gray-700 dark:text-gray-300">
            <span class="font-medium">IP:</span> <%= click.ip_address %> |
            <span class="font-medium">Referrer:</span> <%= click.referrer || "Direct" %>
          </div>
          <div class="text-xs text-gray-500 dark:text-gray-400 mt-1 sm:mt-0">
            <%= time_ago_in_words(click.created_at) %> ago
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 dark:text-gray-400">No clicks yet.</p>
  <% end %>

  <div class="mt-8 text-center">
    <%= link_to "Shorten another URL", new_url_path,
          class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition" %>
  </div>
</div>
